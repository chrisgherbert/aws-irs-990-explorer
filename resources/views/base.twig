    <body>

        <header class="main-header" style="background-color: black">

            <div class="container-fluid">

                <div class="col-sm-6">

                    <h1>
                        <a href="/">
                            <img src="/img/site-logo.svg" alt="AWS IRS 990 Filings Explorer">
                        </a>
                    </h1>

                </div><!-- /.col-sm-6 -->

            </div><!-- /.container-fluid -->

        </header><!-- /.main-header -->

        {% block content %}{% endblock %}

        {% block after_content %}{% endblock %}

        <footer class="main-footer">
            <div class="container-fluid">
                Created by <a href="http://chrisgherbert.com">Chris Herbert</a>
            </div><!-- /.container-fluid -->
        </footer><!-- /.main-footer -->

    </body>

</html>
